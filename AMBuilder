# vim: set sts=2 ts=8 sw=2 tw=99 et ft=python:
import os

binary = builder.compiler.Library('geoip2.ext')

Extension.ConfigureForExtension(builder, binary.compiler)

binary.sources += [
  'extension.cpp',
  'data-pool.c',
  'geoip_util.cpp',
  'maxminddb.c',
  os.path.join(Extension.sm_root, 'public', 'smsdk_ext.cpp')
]

binary.compiler.defines += ['SOURCEMOD_BUILD']

if binary.compiler.family == 'gcc' or binary.compiler.family == 'clang':
  binary.compiler.cxxflags += ['-fno-rtti']
elif binary.compiler.family == 'msvc':
  binary.compiler.cxxflags += ['/GR-']

if binary.compiler.target.platform == 'windows':
  binary.compiler.postlink += ['ws2_32.lib']

Extension.extensions += [builder.Add(binary)]